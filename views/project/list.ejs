<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
  <br>
  <a href="/project/add" class="btn btn-primary"><i class="fa-solid fa-plus fa-lg"></i> Add Project</a>
  <br>
  <table class="table table-striped table-hover">
      <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Deadline</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody>
          <% for (let index = 0; index < ProjectList.length; index++){ %>
              <tr>
                  <td><%= ProjectList[index].project_title %></td>
                  <td><%= ProjectList[index].project_description %></td>
                  <td><%= ProjectList[index].project_deadline %></td>
                  <td>
                    <a href="/project/edit/<%= ProjectList[index].id %>" class="btn btn-info btn-sm"> <i class="fa-solid fa-file-pen fa-lg"></i>Edit</a>
                  </td>               
              </tr>
          <% } %>
        </tbody>
  </table>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>